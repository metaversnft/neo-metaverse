extends layout

block extra_javascript
    // ------------------------ JAVASCRIPT ---------------------

    script(type="text/javascript", src="/javascripts/howler-js/src/howler.core.js")
    script(type="text/javascript", src="/javascripts/howler-js/src/plugins/howler.spatial.js")

    script(type="text/javascript", src="/javascripts/youtube//youtube-api-support.js")
    script(type="text/javascript", src="/javascripts/page-support/test-page-support.js")
        
    // ROS: Latest compiled and minified CSS for jQuery
    link(href="/stylesheets/jsqueryscript/jquerysctipttop.css" rel="stylesheet" type="text/css")

    script(src="https://unpkg.com/@voxeet/voxeet-web-sdk@3.4.0-beta.1/dist/voxeet-sdk.js" type="text/javascript")
    script(src="./scripts/video.js" type="text/javascript")
    script(src="./scripts/utils.js" type="text/javascript")
    script(src="./scripts/ui.js" type="text/javascript")
    script(src="https://kit.fontawesome.com/9a46dc54f8.js" crossorigin="anonymous")

    // ROS: jQuery library
    // script(src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")

block content
    // h1= title
    // p Welcome to #{title}
    table(id="outer-table")
        tbody
            tr
                td
                    div(id="youtube-quadrant-div" class="container")
                        p(class="quadrant-title") YouTube Player

                        // The form for playing a session.
                        // include includes/form-playing-game

                        // Include the elements for a YouTube player.
                        include ./includes/youtube-player-section.jade

                        // div(id="time-location-marked-div")
                            label(id="label-marked-video-location", for="marked-video-location-span" class="col-2 col-form-label project-field-label")
                                | Location chosen:
                            span(id="marked-video-location-span") (none)
            tr
                td
                    // This is the DIV where the track avatars will be
                        and where spatial audio mixing will occur.
                    div(id="mixer-div" class= "container")
                        div(class="video-container track-avatar" data-track-number="0" id="video-container-0")
                            // span(class="track-avatar-title") Track 1
                        // Test track avatar 2.
                        div(class="video-container track-avatar" data-track-number="1" id="video-container-1")
                        // div(class="track-avatar" data-track-number="2")
                           //  span(class="track-avatar-title") Track 2
            tr
                td
                    // Use an HTML table for the buttons.
                    div(class="container" id="button-row-div")
                        table(id="button-row-table")
                            tbody
                                tr(class="button-row-tr")
                                    // Conference name.
                                    td(class="button-row-td")
                                        div(class="input-group")
                                            div(class="input-group-prepend")
                                                div(class="input-group-text" id="btnGroupAddon") Enter Conference Name:
                                            input(type="text" id="alias-input" class="form-control" placeholder="" aria-label="Enter conference name" aria-describedby="btnGroupAddon")
                                    td(class="button-row-td")
                                        // Copy conference link.
                                        div(class="col-1 mt-3")
                                            div(class="copy-join-link mx-auto d-block")
                                                img(src="icons/copy-link.svg" id="copy-join-link")
                                            div(class="copy-join-link mx-auto d-block" id="copy-join-link-msg") Copy Conference URL
                                    // ROS: Join/Leave conference.
                                    td(class="button-row-td")
                                        div(class="row")
                                                div(class="join" id="join-btn")
                                                    img(src="icons/btn-join.svg" class="mx-auto d-block")
                                                    div(style="color: white;") Join Conference
                                                div(class="leave" id="leave-btn")
                                                    img(src="icons/btn-leave.svg" class="mx-auto d-block")
                                                    div(style="color: white;") Leave Conference)
                                    td(class="button-row-td")
                                        div(class="" id="name-message")
                                    // Camera ON/OFF
                                    td(class="button-row-td")
                                        div(class="col-2 d-flex mt-3 justify-content-center conference-btns")
                                            div(class="row mx-auto d-block")
                                                div(id="camera-icon-container")
                                                    div(class="camera-off" id="stop-video-btn")
                                                        img(src="icons/btn-camera-off.svg" class="mx-auto d-block" id="btn-camera-off-icon")
                                                    div(class="camera-on" id="start-video-btn")
                                                        img(src="icons/btn-camera-on.svg" class="mx-auto d-block" id="btn-camera-on-icon")
                                                    div(id="camera-msg" style="color: white;") Camera Off
                                tr(class="button-row-tr")
                                    // ROS: Test button
                                    td(class="button-row-td")
                                        div(class="col-2 d-flex mt-3 justify-content-center conference-btns")
                                            div(class="test" id="test-btn")
                                                img(src="icons/btn-animatedclock-black.svg" class="mx-auto d-block")
                                                div(style="color: white;") TEST
                                    // Direct spatial position entry.
                                    td(class="button-row-td")
                                        // ROS: Raw spatial position entry
                                        div(class="input-group")
                                            div(class="input-group-prepend")
                                                div(class="input-group-text" id="btnEnterXPos") X Pos:
                                            input(ype="text" id="input-x-pos" class="form-control" placeholder="" aria-label="Enter X position" aria-describedby="btnEnterXPos")
                                tr(class="button-row-tr")
                                    // ROS: Selected participant
                                    td(class="button-row-td")
                                        div(class="input-group")
                                            div(class="input-group-prepend")
                                                span(class="input-group-text" id="selected-participant-label") Selected participant: (none):
    // Dolby client code that initializes the Dolby environment.
    script(type="text/javascript" src="./scripts/client.js")

